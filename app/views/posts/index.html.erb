<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= will_paginate @posts %>
<br>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>User</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to post.user.name, post.user %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
